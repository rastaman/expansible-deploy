[ceph]
name=Ceph packages for $basearch
baseurl=http://eu.ceph.com/rpm-{{ ceph_release }}/{{ ceph_distro }}/$basearch
enabled=1
priority=2
gpgcheck=1
type=rpm-md
gpgkey=https://eu.ceph.com/git/?p=ceph.git;a=blob_plain;f=keys/release.asc

[ceph-noarch]
name=Ceph noarch packages
baseurl=http://eu.ceph.com/rpm-{{ ceph_release }}/{{ ceph_distro }}/noarch
enabled=1
priority=2
gpgcheck=1
type=rpm-md
gpgkey=https://eu.ceph.com/git/?p=ceph.git;a=blob_plain;f=keys/release.asc

[ceph-source]
name=Ceph source packages
baseurl=http://eu.ceph.com/rpm-{{ ceph_release }}/{{ ceph_distro }}/SRPMS
enabled=0
priority=2
gpgcheck=1
type=rpm-md
gpgkey=https://ceph.com/git/?p=ceph.git;a=blob_plain;f=keys/release.asc
